extends layouts/main-layout.pug

block style 
    link(rel='stylesheet' href='/css/product.css')
block content
    main
        if produs.length > 0
            .grid
                each products in produs 
                    article.card.product-item
                        header.card__header
                            h1.product__title #{products.title}
                        div.card__image
                            img(src='https://images.unsplash.com/photo-1544716278-ca5e3f4abd8c?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxleHBsb3JlLWZlZWR8Mnx8fGVufDB8fHw%3D&w=1000&q=80' alt='A Book')
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 No Products
            
            
            